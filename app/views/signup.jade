div.container
  div.row.center
    include shared/auth_msgs.jade
    div.card.col.l6.offset-l3.s12
      br
      include shared/auth_nav.jade
      form(ng-submit="register()", name='signup')
        div.row
          div.col.s12.input-field
            input(type="text",ng-model="user.username",id="username",required)
            label(for="username") Username
          div.col.s12.input-field
            input(type="email",ng-model="user.email",id="email",required)
            label(for="email") Email
          div.col.s12.input-field
            input(type="password",ng-model="user.password",id="password", required, pattern=".{2,}")
            label(for="password") Password
          div.col.s12.input-field
            input(type="password",ng-model="user.cpassword",id="cpassword", required, pattern=".{2,}")
            label(for="cpassword") Confirm password
          div.center
            button.btn.waves-effect.waves-light(type="submit")
              i.material-icons.right send
              | Submit
      .center
        br
        div.row
          div.col.s12
            a.btn.waves-effect.waves-light(href="auth/google")
              |  Sign Up with Google
              i.fa.fa-google.c-icon
